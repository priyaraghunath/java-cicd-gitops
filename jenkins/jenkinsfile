pipeline {
  agent any

  tools {
    maven 'Maven 3.8.6'
  }

  environment {
    SONAR_TOKEN = credentials('sonar-token')
    DOCKER_CREDENTIALS = credentials('dockerhub-creds')
    GIT_USER = 'priyaraghunath'
    GIT_EMAIL = 'priyankaraghunath98@gmail.com'
    GITOPS_REPO = 'https://github.com/priyaraghunath/gitops-repo.git'
  }

  stages {

    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/priyaraghunath/java-cicd-gitops.git'
      }
    }

    stage('Build') {
      steps {
        dir('app/myapp') {
          sh 'mvn clean install'
        }
      }
    }

    stage('SonarQube Analysis') {
      steps {
        dir('app/myapp') {
          withSonarQubeEnv('MySonar') {
            sh 'mvn sonar:sonar -Dsonar.login=$SONAR_TOKEN'
          }
        }
      }
    }

    stage('Docker Build and Push') {
      steps {
        dir('app/myapp') {
          script {
            def imageTag = "cupiemayo/myapp:${env.BUILD_NUMBER}"
            sh "docker build -t ${imageTag} ."
            sh "echo ${DOCKER_CREDENTIALS_PSW} | docker login -u ${DOCKER_CREDENTIALS_USR} --password-stdin"
            sh "docker push ${imageTag}"
            // Export image tag as environment variable for next stage
            env.IMAGE_TAG = imageTag
          }
        }
      }
    }

    stage('Update GitOps Deployment') {
      steps {
        script {
          // Clone the GitOps repo
          sh "git clone ${env.GITOPS_REPO} gitops-repo"

          dir('gitops-repo') {
            // Configure Git identity
            sh """
              git config user.name "${env.GIT_USER}"
              git config user.email "${env.GIT_EMAIL}"
            """

            // Update the image tag in deployment.yaml
            sh """
              sed -i 's|image: .*|image: ${env.IMAGE_TAG}|' gitops/deployment.yaml
              git add gitops/deployment.yaml
              git commit -m "Update image tag to ${env.IMAGE_TAG}"
            """

            // Use DockerHub credentials to push securely
            withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
              sh 'git push https://${USERNAME}:${PASSWORD}@github.com/priyaraghunath/gitops-repo.git'
            }
          }
        }
      }
    }
  }
}
