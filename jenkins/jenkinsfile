pipeline {
  agent any

  tools {
    maven 'Maven 3.8.6'
  }

  environment {
    SONAR_TOKEN = credentials('sonar-token')
    DOCKER_CREDENTIALS = credentials('dockerhub-creds')
    GIT_USER = 'priyaraghunath'
    GIT_EMAIL = 'priyankaraghunath98@gmail.com'
    PATH = "/usr/local/bin:${env.PATH}"  // Add aws CLI location to PATH
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/priyaraghunath/java-cicd-gitops.git'
      }
    }

    stage('Build') {
      steps {
        dir('app/myapp') {
          sh 'mvn clean install'
        }
      }
    }

    stage('SonarQube Analysis') {
      steps {
        dir('app/myapp') {
          withSonarQubeEnv('MySonar') {
            sh 'mvn sonar:sonar -Dsonar.login=$SONAR_TOKEN'
          }
        }
      }
    }

    stage('Docker Build and Push') {
      steps {
        dir('app/myapp') {
          script {
            def imageTag = "682033504000.dkr.ecr.us-east-2.amazonaws.com/myapp:${env.BUILD_NUMBER}"
            sh """
              export PATH=/usr/local/bin:\$PATH
              aws ecr get-login-password --region us-east-2 | docker login --username AWS --password-stdin 682033504000.dkr.ecr.us-east-2.amazonaws.com
              docker build -t ${imageTag} .
              docker push ${imageTag}
            """
            env.IMAGE_TAG = imageTag
          }
        }
      }
    }
  }
}
